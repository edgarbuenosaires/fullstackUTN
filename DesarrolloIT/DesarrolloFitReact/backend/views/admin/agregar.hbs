<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="form-floating">
            <h4>Agregar Meals</h4>
            <form action="/admin/meals/agregar" method="post" >
            {{!-- enctype="multipart/form-data" --}}
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Plato" name="plato">
                </div>
                <div class="form-gropu">
                    <textarea type="text" class="form-control" placeholder="Preparacion" name="preparacion"
                        style="height: 100px"></textarea>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"
                        style="height: 100px"></textarea>
                </div>
                {{!-- <div class="form-group">
                    <label>Imagen:<input type="file" name="imagen" id="imagen" /></label>
                </div> --}}
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>