<div class="container" style="margin-top: 50px;">
    {{!--fila 1--}}
    <div class="row">
        <p class="text-end">Hola {{usuario}} <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesion <i
                    class="fas fa-sign-out-alt"></i></a></p>
    </div>
    {{!-- fin fila 1--}}

    {{!-- fila 2 --}}
    <div class="row">
        <div class="col-7">
            <h3>Meals - Preparaciones</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/meals/agregar">Nuevo <i class="fa fa-plus"
                    aria-hidden="true"></i></a>
        </div>
    </div>
    {{!-- fin fila 2 --}}

    {{!-- fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Plato</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each meals}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{plato}}</td>
                        <td class=>{{{imagen}}}</td>
                        <td class="text-end">
                            <a href="/admin/meals/modificar/{{id}}" class="btn btn-sm btn-secondary"><i
                                    class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/meals/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i
                                    class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{!-- fin fila 3 --}}
</div>